<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_card" >

    <ImageView
        android:id="@+id/imgMeals"
        android:layout_width="340dp"
        android:layout_height="220dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/action_image"
        android:src="@drawable/chevapcici"
        android:background="#f4f2f2"
        android:scaleType="fitXY"/>

    <ImageView
        android:id="@+id/imgSwipeLike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/action_image"
        android:src="@drawable/img_swipe_like"
        android:visibility="gone"
        android:alpha="1.5"/>

    <ImageView
        android:id="@+id/imgSwipeNope"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/action_image"
        android:src="@drawable/img_swipe_nope"
        android:visibility="gone" />

</RelativeLayout>